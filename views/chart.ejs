<!doctype html>
   <% include ./header %>
<html>

    <title>銷售量查詢</title>
    <link href="stylesheets/main.css" rel="stylesheet">

    <link href="stylesheets/sidebar.css" rel="stylesheet">

    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/dist/Chart.bundle.js"></script>
    <style>
    canvas {
        -moz-user-select: none;
        -webkit-user-select: none;
        -ms-user-select: none;
    }
    </style>
    <!-- <p id="list"></p>
    <p id="list1"></p>
    <p id="list2"></p> -->

<body>
  <div id="wrapper">
        <div id="page-content-wrapper">
          <div class="container-fluid">

              <h1 class="page-header">銷售量查詢</h1>
              <canvas id="canvas" ></canvas>

          </div>
        </div>
      </div>

      <script>

      var label = ["<%=list1[0]%>","<%=list1[1]%>","<%=list1[2]%>","<%=list1[3]%>","<%=list1[4]%>"];

      var chartData = [<%=list2[0]%>,<%=list2[1]%>,<%=list2[2]%>,<%=list2[3]%>,<%=list2[4]%>];

      var barChartData = {
            labels : label,
            datasets : [
              {
                label:"銷售量",
                borderColor:"rgba(255,255,255,0.8)",
                borderWidth:2,
                backgroundColor:"rgba(255,255,255,0.2)",
                hoverBackgroundColor:"rgba(255,255,255,0.8)",
                // fillColor : "rgba(248,171,32,0.5)",
                // strokeColor : "rgba(252,225,176,0.8)",
                // highlightFill : "rgba(151,187,205,0.75)",
                // highlightStroke : "rgba(151,187,205,1)",
                data :chartData
              }
            ]
          };

          window.onload = function(){

            var ctx = document.getElementById("canvas").getContext("2d");
            window.myBar = new Chart(ctx,
                {type: 'bar',
                data: barChartData,
                options: {
                    elements: {
                        rectangle: {
                            borderWidth: 2,
                            borderColor: 'white',
                            borderSkipped: 'bottom'
                          }
                    },
                    responsive: true,
                    legend: {
                        position: 'bottom',
                        color:"rgba(255,255,255,1)",
                        labels:{
                          fontSize:12,
                          fontColor:"rgba(255,255,255,1)"
                        }
                    },
                    title: {
                        display: true,
                        text: '銷售量統計',
                        fontSize:20,
                        fontColor:"rgba(255,255,255,1)",
                        },

                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero:true
                            }
                        }]
                    }

                    }
                }
              )
            }

            </script>


    </body>
</html>
